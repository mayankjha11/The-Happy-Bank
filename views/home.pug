doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title The Happy Bank
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')
  link(rel='preconnect', href='https://fonts.googleapis.com')
  link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap', rel='stylesheet')
  style.
    body{
    font-family: 'Roboto', sans-serif;
    }
    .nav-img {
    height: 50px;
    width: 50px;
    margin: 20px;
    }
    /* home section styling */
    .home {
      display: flex;
      background: url("/images/bankbg.jpg") no-repeat center;
      height: 100vh;
      color: #fff;
      min-height: 500px;
      background-size: cover;
      background-attachment: fixed;
    }
    .home .max-width {
      width: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin-bottom: 150px;
    }
    .home .max-width .row {
      margin-right: 0;
    }
    .home-content{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      margin: 200px;
    }
    .home .home-content .text-2 {
      font-size: 75px;
      font-weight: 600;
      /* margin-left: -3px; */
    }
    .home .home-content .text-3 {
      font-size: 40px;
      margin: 5px 0;
      font-weight: 500;
    }
    .home .home-content a {
      display: inline-block;
      background: crimson;
      color: #fff;
      font-size: 25px;
      padding: 12px 36px;
      margin-top: 20px;
      font-weight: 400;
      border-radius: 6px;
      border: 2px solid crimson;
      transition: all 0.3s ease;
    }
    .home .home-content a:hover {
      color: crimson;
      background: none;
    }
    .link {
    color: white;
    text-decoration: none;
    font-weight: bold;
    }
    .footer{
    margin-top: 50px;
    padding: 30px;
    text-align: center;
    color: white;
    background-color: black;
    }
    h1 {
    text-align: center;
    margin: 60px;
    font-size: 70px;
    }
    .services {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    }
    .container {
    border: 2px solid black;
    border-radius: 10px;
    height: 220px;
    width: 350px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    background-color: #1b1919;
    color: white;
    }
    .container button {
    border-radius: 8px;
    }
    .container a {
    padding: 10px;
    text-decoration: none;
    color: black;
    }
    .container a:hover{
    color: blue;
    }
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    img.nav-img(src='/images/bank-logo.png', alt='')
    a.navbar-brand(href='/home') Home
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(href='/customers') Customers
        li.nav-item
          a.nav-link(href='/history') Transaction History
// home section start
section#home.home
  .max-width
    .home-content
      .text-2(style='color: #ce1515;') Welcome to The Happy Bank
      .text-3(style='color: black;') In banking or insurance trust is the only thing you have to sell

#carouselExampleInterval.carousel.slide(data-bs-ride='carousel')
  .carousel-inner
    .carousel-item.active(data-bs-interval='2000')
      img.d-block.w-100(src='images/bank3.jpg', height='500', width='500', alt='...')
    .carousel-item(data-bs-interval='2000')
      img.d-block.w-100(src='images/bank4.jpg', height='500', width='500', alt='...')
    .carousel-item
      img.d-block.w-100(src='images/bank1.jpg', height='500', width='500', alt='...')
  button.carousel-control-prev(type='button', data-bs-target='#carouselExampleInterval', data-bs-slide='prev')
    span.carousel-control-prev-icon(aria-hidden='true')
    span.visually-hidden Previous
  button.carousel-control-next(type='button', data-bs-target='#carouselExampleInterval', data-bs-slide='next')
    span.carousel-control-next-icon(aria-hidden='true')
    span.visually-hidden Next
