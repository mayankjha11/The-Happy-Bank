doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title THE Happy Bank
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')
  link(rel='preconnect', href='https://fonts.googleapis.com')
  link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap', rel='stylesheet')
  style.
    body{
    font-family: 'Roboto', sans-serif;
    }
    h3 {
      margin: 30px;
      text-align: center;
    }
    input[type="text"],
    input[type="number"],
    select {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }
    input[type="submit"] {
    width: 100%;
    background-color: #4caf50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    }
    input[type="submit"]:hover {
    background-color: #45a049;
    }
    .form {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
    }
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/home') Home
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link(href='/customers') Customers
        li.nav-item
          a.nav-link(href='/history') Transaction History
table.table.table-hover
  thead
    tr
      th(scope='col') Customer Name
      th(scope='col') Email
      th(scope='col') Balance
  tbody
    tr.table-primary
      td #{customer.name}
      td #{customer.email}
      td #{customer.balance}
h3 Transfer Money
.form
  form(action='/update', method='post')
    label(for='sname') Sender Name
    input#sname(type='text', name='sname', placeholder='Sender name')
    label(for='rname') Receiver Name
    select#rname(name='rname')
      option Choose receiver   
      option(value='Keshav') Keshav  
      option(value='Mohit') Mohit
      option(value='Lakshay') Lakshay  
      option(value='Mayank') Mayank  
      option(value='Vansh') Vansh  
      option(value='Vaibahv') Vaibhav 
      option(value='Deepanshu') Deepanshu  
      option(value='Tushar') Tushar 
      option(value='Shivam') Shivam  
      option(value='Hardik') Hardik 
    label(for='amount') Amount
    input#amount(type='number', name='amount', placeholder='Enter amount' min='1')
    input(type='submit', value='Transfer')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js', integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf', crossorigin='anonymous')
